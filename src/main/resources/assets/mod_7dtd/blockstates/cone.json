      "when": { "facing": "south"},
      "apply": { "model": "mod_7dtd:block/obj/cone.obj", "y": 180, "uvlock": true }
    },
    {
      "when": { "facing": "west"},
      "apply": { "model": "mod_7dtd:block/obj/cone.obj", "y": 270, "uvlock": true }
    }
  ]
